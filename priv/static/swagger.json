      "post": {
        "description": "Create an user",
        "operationId": "AsimovApiWeb.UsersController.create",
        "parameters": [
          {
            "description": "User name",
            "in": "query",
            "name": "name",
            "required": true,
            "type": "string",
            "x-example": 42
          },
          {
            "description": "User email",
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string"
          },
          {
            "description": "User password",
            "in": "query",
            "name": "password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns data from the created user"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "",
        "tags": [
          "Users"
        ]
      }
    },
    "/api/users/signin": {
      "post": {
        "description": "Sign in to the API",
        "operationId": "AsimovApiWeb.UsersController.sign_in",
        "parameters": [
          {
            "description": "User ID",
            "in": "query",
            "name": "id",
            "required": true,
            "type": "integer",
            "x-example": 42
          },
          {
            "description": "User password",
            "in": "query",
            "name": "password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the JWT token"
          }
        },
        "summary": "",
        "tags": [
          "Users"
        ]
      }
    },
    "/api/users/{id}": {
      "get": {
        "description": "Get an user by ID",
        "operationId": "AsimovApiWeb.UsersController.show",
        "parameters": [
          {
            "description": "User ID",
            "in": "path",
            "name": "id",
            "required": true,
            "type": "integer",
            "x-example": 42
          }
        ],
        "responses": {
          "200": {
            "description": "Returns users data"
          }
        },
        "security": [
          {
            "Bearer": []
